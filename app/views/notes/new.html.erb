<%= form_for @new_note do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :person %>
    <%= f.text_field :person %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: "text-area" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Note" %>
  </div>
<% end %>
