<%= form_tag search_notes_path do %>
  <div class="form-group">
    <%= label_tag :search %>
    <%= text_field_tag :search %>
  </div>
  <div class="form-group">
    <%= submit_tag "Search" %>
  </div>
<% end %>

<p><%= link_to "Clear Search", root_path %></p>

<ul>
  <li><%= link_to "Create a new note", new_note_path %></li>
  <li><%= link_to "Upload a note", new_upload_notes_path %></li>
</ul>

<%= render @notes %>
